<%= form_for @job do |f| %>
  <% @job.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
  <% end %>
	<div>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	<div>
		<%= f.label :location %>
		<%= f.text_field :location %>
	</div>
	<div>
		<%= f.label :description %>
		<%= f.text_area :description, size: '60x6' %>
	</div>
	<div class="field">
		<%= f.label :tag_list, "Tags (separated by commas)" %><br />
		<%= f.text_field :tag_list %>
	</div>
	<div>
		<%= f.submit %>
	</div>
<% end %>